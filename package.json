{
  "name": "slippilab",
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "dev": "remix vite:dev",
    "format": "prettier --write .",
    "sql:gen": "drizzle-kit generate:sqlite",
    "sql:local": "wrangler d1 migrations apply slippilab --local",
    "sql:prod": "wrangler d1 migrations apply slippilab",
    "sql:staging": "wrangler d1 migrations apply slippilab-dev",
    "typegen": "wrangler types"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20240320.1",
    "@fontsource-variable/inter": "^5.0.17",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@react-three/drei": "^9.102.6",
    "@react-three/fiber": "^8.15.19",
    "@remix-run/cloudflare": "^2.8.1",
    "@remix-run/cloudflare-pages": "^2.8.1",
    "@remix-run/dev": "^2.8.1",
    "@remix-run/react": "^2.8.1",
    "@shelacek/ubjson": "^1.1.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/react": "^18.2.69",
    "@types/react-dom": "^18.2.22",
    "autoprefixer": "^10.4.19",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "drizzle-kit": "^0.20.14",
    "drizzle-orm": "^0.30.4",
    "isbot": "^5.1.2",
    "miniflare": "^3.20240320.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "random-word-slugs": "^0.1.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.2",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "three": "^0.162.0",
    "typescript": "^5.4.3",
    "vite": "^5.2.4",
    "vite-tsconfig-paths": "^4.3.2",
    "wrangler": "^3.37.0",
    "zustand": "^4.5.2"
  },
  "prettier": {
    "plugins": [
      "@trivago/prettier-plugin-sort-imports",
      "prettier-plugin-tailwindcss"
    ],
    "importOrder": [
      "^~/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  }
}