{
  "name": "@slippilab/server",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "exports": {
    "types": "./.types/index.d.ts"
  },
  "scripts": {
    "build": "pnpm run /^build:/",
    "build:types": "tsc",
    "build:vite": "vite build",
    "db:generate": "drizzle-kit generate:sqlite --config ./drizzle.config.ts",
    "db:local:exec": "wrangler d1 execute --local slippilab-dev --persist-to .wrangler/state",
    "db:local:setup": "wrangler d1 migrations apply slippilab-dev --local --persist-to .wrangler/state",
    "db:dev:exec": "wrangler d1 execute slippilab-dev",
    "db:prod:exec": "wrangler d1 execute slippilab",
    "dev": "pnpm run /^dev:/",
    "dev:types": "tsc -w",
    "dev:vite": "vite",
    "format": "prettier -w ."
  },
  "dependencies": {
    "@lucia-auth/adapter-sqlite": "^2.0.1",
    "@lucia-auth/oauth": "^3.5.0",
    "@slippilab/common": "workspace:*",
    "@slippilab/parser": "workspace:*",
    "drizzle-orm": "^0.29.2",
    "hono": "^3.11.11",
    "json-joy": "^11.28.0",
    "lucia": "^2.7.6",
    "random-word-slugs": "^0.1.7"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "@hono/vite-cloudflare-pages": "^0.1.2",
    "@hono/vite-dev-server": "^0.3.4",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "drizzle-kit": "^0.20.9",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-tsconfig-paths": "^4.2.3",
    "wrangler": "^3.22.1"
  },
  "prettier": {
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "^~/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  }
}