{
  "name": "@slippilab/www",
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "db:generate": "drizzle-kit generate",
    "db:local": "wrangler d1 migrations apply DB --local",
    "dev": "remix vite:dev",
    "format": "prettier -w .",
    "typegen": "wrangler types"
  },
  "dependencies": {
    "@cloudflare/workers-types": "latest",
    "@egoist/tailwindcss-icons": "latest",
    "@fontsource-variable/inter": "latest",
    "@iconify/json": "latest",
    "@react-three/drei": "latest",
    "@react-three/fiber": "latest",
    "@remix-run/cloudflare": "latest",
    "@remix-run/cloudflare-pages": "latest",
    "@remix-run/dev": "latest",
    "@remix-run/react": "latest",
    "@shelacek/ubjson": "latest",
    "@slippilab/common": "workspace:*",
    "@slippilab/parser": "workspace:*",
    "@slippilab/search": "workspace:*",
    "@trivago/prettier-plugin-sort-imports": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@types/three": "latest",
    "autoprefixer": "latest",
    "drizzle-kit": "latest",
    "drizzle-orm": "latest",
    "framer-motion": "latest",
    "isbot": "latest",
    "miniflare": "latest",
    "node-fetch": "latest",
    "prettier": "latest",
    "prettier-plugin-tailwindcss": "latest",
    "react": "latest",
    "react-aria-components": "latest",
    "react-dom": "latest",
    "tailwindcss": "latest",
    "tailwindcss-react-aria-components": "latest",
    "three": "latest",
    "vite": "latest",
    "vite-tsconfig-paths": "latest",
    "wrangler": "latest",
    "zustand": "latest"
  },
  "prettier": {
    "plugins": [
      "@trivago/prettier-plugin-sort-imports",
      "prettier-plugin-tailwindcss"
    ],
    "importOrder": [
      "^~/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  }
}